<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="elevation">20dp</item>
    </style>

    <style name="ButtonText" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Large.White</item>
    </style>

    <style name="TextAppearance.Large.White">
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>



